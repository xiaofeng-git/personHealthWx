/* 继承全局样式 */
page {
  --primary-color: #4CAF50;
  --primary-light: #8BC34A;
  --background-color: #F5F5F5;
  --card-background: #FFFFFF;
  --text-primary: #333333;
  --text-secondary: #666666;
  --border-radius: 16rpx;
  --card-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  
  background-color: var(--background-color);
  min-height: 100vh;
  box-sizing: border-box;
}

.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.card {
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--card-shadow);
}

.card-title {
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.goal-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.goal-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #F8F8F8;
  border-radius: var(--border-radius);
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.input {
  flex: 1;
  height: 60rpx;
  background: white;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: var(--text-primary);
}

.unit {
  width: 80rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: right;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: var(--primary-color);
  color: white;
  border-radius: var(--border-radius);
  font-size: 32rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  opacity: 0.8;
} 