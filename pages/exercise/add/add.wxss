.container {
  padding: 20rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.type-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.type-item.selected {
  background: #e6f3ff;
  border: 2rpx solid #1890ff;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.calories {
  font-size: 48rpx;
  color: #1890ff;
  text-align: center;
  margin-top: 20rpx;
}

.save-btn {
  margin-top: 60rpx;
  width: 90%;
} 